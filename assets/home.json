{
  "$view": {
    "attributes": {
      "_id": "garage",
      "statusBar.style": "dark",
      "bg.color": "#cdcdcd"
    },
    "actions": [
      {
        "_type": "Refresh",
        "attributes": {
          "_target": "getHvac,getSecurity,getDishwasher"
        },
        "on": "willAppear"
      }
    ],
    "controls": [
      {
        "_id": "layoutMain",
        "_type": "Layout",
        "attributes": {
          "size.w": "100%",
          "size.h": "100%",
          "visible": true,
          "bg.color": "ffffff",
          "layoutType": "float"
        },
        "controls": [
          {
            "_id": "customHeader",
            "_type": "Custom",
            "actions": [
              {
                "_type": "Function",
                "attributes": {
                  "_target": "$app",
                  "functionName": "drawer.l.toggle"
                },
                "on": "button.left"
              }
            ],
            "attributes": {
              "size.w": "100%",
              "size.h": 62,
              "visible": true,
              "title": "Home",
              "button.left": "../images/btnMenu_42x42.png",
              "controlLocation": "/controls/header.json",
              "layoutType": "float"
            },
            "controls": []
          },
          {
            "_id": "layoutProfilePhoto",
            "_type": "Layout",
            "controls": [
              {
                "_id": "imageProfileBlur",
                "_type": "Image",
                "controls": [],
                "attributes": {
                  "image": "[[$session.user_picture]]",
                  "layoutType": "float",
                  "blur.radius": 2,
                  "size.h": "[[$device.screen.w]]",
                  "size.w": "100%"
                }
              },
              {
                "_id": "imageProfileBlur",
                "_type": "Image",
                "controls": [],
                "attributes": {
                  "image": "[[$session.user_picture]]",
                  "layoutType": "float",
                  "align.h": "center",
                  "align.v": "top",
                  "margin.top": 100,
                  "size.h": 100,
                  "size.w": 100,
                  "border.size": 2,
                  "border.color": "ffffff"
                }
              },
              {
                "_id": "button",
                "_type": "Button",
                "attributes": {
                  "align.h": "center",
                  "align.v": "bottom",
                  "bg.color": "666666",
                  "margin.bottom": 50,
                  "color": "ffffff",
                  "layoutType": "float",
                  "size.h": 50,
                  "size.w": 200,
                  "text": "[[$session.user_name_first]] [[$session.user_name_last]]",
                  "touch.bg.color": "cdcdcd",
                  "touch.color": "6c6c6c50"
                }
              }
            ],
            "attributes": {
              "layoutType": "float",
              "margin.top": 62,
              "size.h": "[[$device.screen.w]]",
              "size.w": "100%"
            }
          }
        ]
      }
    ],
    "datasources": []
  }
}